@using VeterinariaWebApp.Entities;
@model CitaInfo
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container px-4 px-lg-5 my-5">

    <div class="row gx-4 gx-lg-5 align-items-center">
        <div class="col-md-6">
            <img class="card-img-top border-dark border-1"
                 src="@Model.FotoMascota" />
        </div>
        <div class="col-md-6">
            <h5>Motivo:</h5>
            <p>@Model.Motivo</p>
            <div>
                <h5>Nombre del servicio:</h5>
                <p>@Model.Servicio</p>
            </div>
            <div>
                <h5>Precio: </h5>
                <p>$/. @Model.PrecioUnitario</p>
            </div>
            <div>
                <h5>Fecha y hora de la cita :</h5>
                <p>@Model.FechaHora</p>
            </div>
            <div>
                <h5>Nombre del cliente:</h5>
                <p>@Model.Cliente</p>
            </div>
            <div>
                <h5>Nombre de la mascota:</h5>
                <p>@Model.Mascota</p>
            </div>
            
            
            <div>
                <a class="btn btn-outline-primary" asp-controller="Home" asp-action="Index">
                    <i class="oi oi-arrow-left me-1"></i>
                    Volver
                </a>
            </div>
        </div>
    </div>

</div>



